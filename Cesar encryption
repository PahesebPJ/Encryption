#include<stdio.h>
#include<conio.h>
#include<stdlib.h>
#include<string.h>

//Kiubo bato, te he hackiado chaval, boludo.

main(){
	int opc=0;
	char vocales[] = {'a','b','c','d','e','f','g','h','i','j','k','l','m','n','o','p','q','r','s','t','u','v','w','x','y','z','a','b','c'};
	char a[30];
	do{
		fflush(stdin);
		system("cls");
		printf("CESAR CODE \n1.Code\n2.Decode\n3.Exit\nOption: ");
		scanf("%d",&opc);
		switch(opc){
			case 1:
				system("cls");
				printf("Word: ");
				scanf("%s",a);
				for(int i=0;i<30;i++){
					for(int j=0;j<26;j++){
						if(a[i]==vocales[j]){
							a[i]=vocales[j+3];
							break;
						}
					}
				}
				printf("\nWord coded: %s",a);
				getch();
				break;
			case 2:
				system("cls");
				printf("Word: ");
				scanf("%s",a);
				for(int i=0;i<30;i++){
					for(int j=0;j<26;j++){
						if(a[i]==vocales[j]){
							a[i]=vocales[j-3];
							break;
						}
					}
				}
				printf("\nWord decoded: %s",a);
				getch();
				break;
			case 3:
				break;
			default:
				printf("monkey");
				exit(-1);
		}
	}while(opc!=3);
}
